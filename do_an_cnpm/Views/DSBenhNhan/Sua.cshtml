@model do_an_cnpm.Models.BENHNHAN

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Shared/_TCADMIN.cshtml";
}
<style>
    select {
        height: 40px;
        padding: 8px 12px;
        border: 1px solid #b3b3b3;
        border-radius: 3px;
        outline: none;
        font-size: 1.4rem;
    }
</style>
<div class="app__container">
    <div class="grid wide">

        <!-- <div class="aboutus">
          <h3 class="aboutus-label">About us</h3>
        </div> -->
        <div class="row sm-gutter app__content">
            <div class="col l-2 m-0 c-0">
                <nav class="category">
                    <div class="category-title">DANH MỤC</div>
                    <ul class="category-list">
                        <li class="category-item category-item--active">
                            <a href="@Url.Action("CaKham","CaKham")" class="category-item__link">
                                <i class="fas fa-solid fa-list"></i>
                                Danh sách ca khám
                            </a>
                        </li>
                        <li class="category-item">
                            <a href="@Url.Action("DSBenhNhan","DSBenhNhan")" class="category-item__link">
                                <i class="fas fa-id-card"></i>
                                Danh sách bệnh nhân
                            </a>
                        </li>
                        <li class="category-item">
                            <button href="#" class="category-item__link category-item-button">
                                <i class="fas fa-address-card"></i>
                                Lập phiếu khám bệnh
                                <i class="fas fa-solid fa-chevron-down" style="margin-left: 12px;"></i>
                            </button>
                            <div class="category-item_list-dv" style="margin-left: 45px;">
                                <ul class="category-item_list">
                                    <!-- <li class="category-item_list-li"><a class="category-item_list-link" href="#">Lập phiếu khám bệnh</a></li> -->
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("XetNghiem", "XetNghiem")">Phiếu xét nghiệm</a></li>
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("XQuang", "XQuang")">Phiếu chụp X - quang</a></li>
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("ChupCT", "ChupCT")">Phiếu chụp CT</a></li>
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("TaiKham", "TaiKham")">Phiếu hẹn tái khám</a></li>
                                </ul>
                            </div>

                        </li>
                        <li class="category-item">
                            <button href="#" class="category-item__link category-item-button">
                                <i class="fas fa-clinic-medical"></i>
                                Thuốc</a>
                                <i class="fas fa-solid fa-chevron-down" style="margin-left: 110px;"></i>
                            </button>
                            <div class="category-item_list-dv" style="margin-left: 45px;">
                                <ul class="category-item_list">
                                    @*<li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("TaoThuoc", "Thuoc")">Lập danh sách thuốc</a></li>*@
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("Thuoc", "Thuoc")">Tra cứu thuốc</a></li>
                                    <!-- <li class="category-item_list-li"><a class="category-item_list-link" href="#">Lập phiếu nhập thuốc</a></li> -->
                                    <li class="category-item_list-li"><a class="category-item_list-link" href="@Url.Action("DonThuoc", "DonThuoc")">Lập đơn thuốc</a></li>

                                </ul>
                            </div>

                        </li>
                        <li class="category-item">
                            <a href="@Url.Action("HoaDon", "HoaDon")" class="category-item__link">
                                <i class="fas fa-money-check-alt"></i>
                                Lập hóa đơn thanh toán
                            </a>
                        </li>
                        <li class="category-item">
                            <a href="@Url.Action("DoanhThuT", "DoanhThuT")" class="category-item__link">
                                <i class="fas fa-chart-bar"></i>
                                Doanh thu
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col l-10 m-12 c-12">

                <div class="home-filter hide-on-mobile-tablet">
                    <span class="home-filter__label">Phòng khám tai mũi họng</span>
                </div>

                <div class="home-product">
                    <div class="row sm-gutter">
                        <!-- Product item -->

                        <div class="home-product-title">
                            <div class="home-product-title-label">
                                <a href="#" class="home-product-title-label__link">
                                    <h2 class="home-product-title-label__heading">Đăng ký khám bệnh</h2>
                                </a>

                            </div>


                            <div class="home-product-contents-1">
                                <form action="" method="POST" class="form3" id="form-2">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(m => m.MaBN)
                                        <h3 class="heading" style="font-size: 2rem ;">Phiếu đăng ký khám bệnh</h3>
                                        <p class="desc"></p>

                                        <div class="spacer"></div>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        
                                        <div class="form-group1">
                                            <div class="form-group2">
                                                <label for="email" class="form-label">Họ tên</label>
                                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Họ tên..." } })
                                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>

                                            <div class="form-group2">
                                                <label for="email" class="form-label">Giới tính</label>
                                                @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Giới tính..." } })
                                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>

                                        </div>

                                        <div class="form-group1">
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Điện thoại</label>
                                                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Điện thoại..." } })
                                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Ngày sinh</label>
                                                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Ngày sinh..." } })
                                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                        </div>

                                        <div class="form-group1">
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Địa chỉ</label>
                                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Địa chỉ..." } })
                                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Loại bệnh</label>
                                                @Html.EditorFor(model => model.LoaiBenh, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Loại bệnh..." } })
                                                @Html.ValidationMessageFor(model => model.LoaiBenh, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                        </div>

                                        <div class="form-group1">
                                            <div class="form-group3 ">
                                                <label for="password" class="form-label">Triệu chứng</label>
                                                @Html.EditorFor(model => model.TrieuChung, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Triệu chứng..." } })
                                                @Html.ValidationMessageFor(model => model.TrieuChung, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                        </div>

                                        <div class="form-group1">
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Ngày khám</label>
                                                @Html.EditorFor(model => model.NgayKham, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Ngày khám..." } })
                                                @Html.ValidationMessageFor(model => model.NgayKham, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Ngày đăng ký</label>
                                                @Html.EditorFor(model => model.NgayDangKy, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Ngày đăng ký..." } })
                                                @Html.ValidationMessageFor(model => model.NgayDangKy, "", new { @class = "text-danger" })
                                                <span class="form-message"></span>
                                            </div>
                                        </div>

                                        <div class="form-group1">
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Loại dịch vụ</label>
                                                @Html.EditorFor(model => model.LoaiDichVu, new { htmlAttributes = new { @class = "form-control", @required = "Vui lòng điền trường này", @placeholder = "Hãy ghi không chọn hoặc chọn chụp XQuang hay chụp CT hay xét nghiệm nếu có..." } })
                                                @Html.ValidationMessageFor(model => model.LoaiDichVu, "", new { @class = "text-danger" })

                                                <span class="form-message"></span>
                                            </div>
                                            <div class="form-group2">
                                                <label for="password" class="form-label">Khung giờ khám <b style="color:red;">(vui lòng chọn đúng khung giờ khám)</b> </label>
                                                @{Html.RenderAction("ChonKG", "DSBenhNhan"); }

                                                <span class="form-message"></span>
                                            </div>
                                        </div>
                                        <div class="form-button">
                                            @*<button class="form-submit1"> <a href="">In phiếu</a></button>*@
                                            <button class="form-submit1" type="submit">Cập nhật</button>
                                        </div>

                                    }


                                </form>

                                <button class="btn-back">
                                    @Html.ActionLink("Trở về", "DSBenhNhan")
                                </button>


                            </div>
                        </div>



                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

