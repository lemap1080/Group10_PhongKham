@model do_an_cnpm.Models.PHIEUHENTAIKHAM

@{
    Layout = null;
}

<link href="~/Content/assets/css/base.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/cart.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/grid.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/main.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/reset.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/responsive.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/validator.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/slider.css?Version=1" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<!-- <link rel="stylesheet" href="./assets/bootstrap-5.1.3-dist/bootstrap-5.1.3-dist/css/bootstrap.css"> -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet" />


<div class="app__container">
    <div class="grid wide">


        <div class="col l-12 m-12 c-12">




            <div class="home-product" style="margin-bottom:0px!important;">
                <div class="row sm-gutter">
                    <!-- Product item -->

                    <div class="home-product-title" style="margin-top:20px!important;">
                        <div class="home-product-title-label">
                            <a href="#" class="home-product-title-label__link">
                                <h2 class="home-product-title-label__heading">Lập phiếu hẹn tái khám</h2>
                            </a>




                        </div>


                        <div class="home-product-contents-1">
                            <form action="" method="POST" class="form3" id="form-2">
                                <h3 class="heading" style="font-size: 2rem ;">Phiếu hẹn tái khám</h3>
                                <p class="desc"></p>

                                <div class="spacer"></div>

                                <div class="form-group1">
                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Họ tên</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.BENHNHAN.HoTen)
                                        </p>

                                        <span class="form-message"></span>
                                    </div>

                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Ngày khám</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.BENHNHAN.NgayKham)
                                        </p>
                                        <span class="form-message"></span>
                                    </div>

                                </div>

                                <div class="form-group1">
                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Ngày hẹn</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.NgayHen)
                                        </p>
                                        <span class="form-message"></span>
                                    </div>
                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Giới tính</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.BENHNHAN.GioiTinh)
                                        </p>
                                        <span class="form-message"></span>
                                    </div>
                                </div>

                                <div class="form-group1">
                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Địa chỉ</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.BENHNHAN.DiaChi)
                                        </p>
                                        <span class="form-message"></span>
                                    </div>
                                    <div class="form-group2" style="align-items:flex-start !important;">
                                        <label for="text" class="form-label">Bác sĩ điều trị</label>
                                        <p style="font-size:17px">
                                            @Html.DisplayFor(m => m.BACSI.TenBacSi)
                                        </p>
                                        <span class="form-message"></span>
                                    </div>
                                </div>

                                



                        </div>


                        <div class="form-button">
                            <button type="submit" class="form-submit1"> <a href="">In phiếu</a></button>
                            <button type="submit" class="form-submit1"> <a href="@Url.Action("TaiKham", "TaiKham")">Trở về</a></button>
                        </div>

                        <!-- <div class="form-group">
                          <a href="../register.html" class="form-register">Đăng kí tài khoản</a>
                        </div>
                        <div class="form-group">
                          <a href="#" class="form-register">Quên mật khẩu?</a>
                        </div> -->
                        </form>




                    </div>
                </div>



            </div>
        </div>



    </div>
</div>

<script src="~/Scripts/assets/js/products.js"></script>
<script src="~/Scripts/assets/js/validator.js"></script>
<script src="~/Scripts/assets/js/slider2.js"></script>
<script src="https://kit.fontawesome.com/2d69c8ebbe.js" crossorigin="anonymous"></script>
