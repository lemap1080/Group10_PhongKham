@model do_an_cnpm.Models.ADMINISTRATOR

@{
    Layout = null;
}

<link href="~/Content/assets/css/base.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/cart.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/grid.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/main.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/reset.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/responsive.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/validator.css?Version=1" rel="stylesheet" />
<link href="~/Content/assets/css/slider.css?Version=1" rel="stylesheet" />

<div class="main">
    
    <form action="" method="POST" class="form" id="form-2">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            
            <h3 class="heading">Đăng nhập</h3>
            <p class="desc"></p>

            <div class="spacer"></div>

            <div class="form-group">
                <label for="email" class="form-label">Tên đăng nhập</label>
                @Html.TextBoxFor(m => m.TenAD, new { @class = "form-control", @placeholder = "Tên đăng nhập...", @required = "Vui lòng nhập tên đăng nhập", @type = "text" })
                <!--<input id="email" name="email" type="text" placeholder="Tên đăng nhập..." class="form-control"> -->
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu...", @required = "Vui lòng nhập mật khẩu", @type = "password" })
                <!--<input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">-->
                <span class="form-message"></span>
            </div>
            <p style="color:red; text-align:center;">
                @if (ViewBag.error != null)
                {
                    @ViewBag.error;
                }

            </p>
            @Html.AntiForgeryToken();

            <button type="submit" class="form-submit">Đăng nhập</button>
            <div class="form-group">
                <a href="#" class="form-register">Quên mật khẩu?</a>
            </div>
        }

    </form>


</div>
